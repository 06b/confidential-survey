<div class="input">
  <%= form.label question.key, question.text %>
  <ul class="usa-unstyled-list">
    <%- question.choices.each do |choice| %>
    <li class="radio">
      <%- option_id = "#{question.key}-#{choice.value}" %>
      <%= check_box_tag "survey[#{question.key}][]", choice.value, false, {id: option_id} %>
      <%= form.label choice.label, for: option_id %>
    </li>
    <%- end %>
  </ul>
</div>
